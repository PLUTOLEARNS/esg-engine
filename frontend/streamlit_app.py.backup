        elif esg_score >= 60:
            color_class = "metric-yellow" 
            status = "üü° Good"
        else:
            color_class = "metric-red"
            status = "üî¥ Needs Improvement"
        
        st.markdown(f"""
        <div class="metric-card">
            <div class="metric-title">Portfolio ESG Score</div>
